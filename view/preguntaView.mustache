<main class="container-supremo">
        {{#pregunta}}
                    <div class="card-section mb-3">
                        <h5 class="card-title">Tiempo restante:</h5>
                        <div id="timer" class="progress my-2">
                            <div id="barraProgreso" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <p id="tiempoRestante" class="text-danger"></p>
                    </div>

                <form id="formulario-pregunta" method="post" action="/pregunta/validarOpcion">


                    <input type="hidden" name="pregunta_id" value="{{pregunta_id}}">

                    <div class="card-pregunta">
                        <div class="card-section mb-3">
                            <!--<h5 class="card-title">Mi puntaje es: {{puntaje}}</h5>-->
                            <h5 class="card-title">Dificultad: {{dificultad}}</h5>
                            <input type="hidden" id="puntaje" name="puntaje" value={{puntaje}} >
                        </div>
                            <div class="pregunta">
                                <p>{{pregunta}}</p>
                            </div>
                        <div class="card-section mb-3">
                            <ul class="opciones">
                                {{#opciones}}
                                    <li class="opciones-item">
                                        <input type="radio" id="opcion_{{id}}" name="opcion_id" value="{{id}}" required>
                                        <label for="opcion_{{id}}">{{opcion}}</label>
                                    </li>
                                {{/opciones}}
                            </ul>
                        </div>

                    </div>
                    <button type="submit">Validar Respuestas</button>
                </form>
                {{#partidaSesion}}
                    <pre>{{.}}</pre>
                {{/partidaSesion}}
        {{/pregunta}}

        {{#correcta}}
            <script>
                $(document).ready(function() {
                    $('#reportingModal').modal('show');
                });
            </script>
            <div class="modal fade" id="reportingModal" tabindex="-1" aria-labelledby="reportingModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <a class="btn btn-success" href="/pregunta/show/{{siguiente_id}}">Siguiente pregunta</a>
                        </div>
                        <div class="modal-body">
                            <a class="btn btn-danger btn-sm" href="/pregunta/reporteForm/pregunta={{pregunta_id}}">Reportar pregunta</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/correcta}}

        <div class="modal fade" id="timeOutModal" tabindex="-1" aria-labelledby="timeOutModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title text-danger" id="timeOutModalLabel">¡Tiempo agotado!</h5>
                    </div>
                    <div class="modal-body">
                        Se acabó el tiempo para responder a esta pregunta.
                    </div>
                    <div class="modal-footer">
                        <a href="/juego/perdido" class="btn btn-danger">Continuar</a>
                    </div>
                </div>
            </div>
        </div>

</main>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        let tiempoTotal = 20;
        let tiempoRestante = tiempoTotal;

        const barraProgreso = document.getElementById('barraProgreso');
        const textoTiempo = document.getElementById('tiempoRestante');
        let interval;

        function iniciarTemporizador() {
            interval = setInterval(() => {
                tiempoRestante--;

                barraProgreso.style.width = ((tiempoRestante / tiempoTotal) * 100) + '%';
                textoTiempo.textContent = `Quedan ${tiempoRestante} segundos`;

                if (tiempoRestante <= 0) {
                    clearInterval(interval);
                    const timeOutModal = new bootstrap.Modal(document.getElementById('timeOutModal'));
                    timeOutModal.show();
                }
            }, 1000);
        }

        iniciarTemporizador();

        const reportingModal = document.getElementById('reportingModal');
        if (reportingModal) {
            const bootstrapModal = new bootstrap.Modal(reportingModal);
            reportingModal.addEventListener('shown.bs.modal', () => {
                clearInterval(interval);
            });
        }
    });
</script>