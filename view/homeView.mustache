{{#user}}
<main class="container">
    <section class="user-info">
        <img src="/public/img/{{foto}}" alt="Avatar del usuario" class="avatar">
        <div class="info">
            <a href="/usuario/profile/username={{usuario}}" class="usuario-link">{{usuario}}</a>
            <p>Nombre: {{nombre}}</p>
            <a href="?page=juego&action=verRanking" class="ranking-link">Ver ranking</a>
        </div>
    </section>
{{#admin}}
    <section class="actions">
        <a href="/admin/showStadistics" class="btn">Ver estadísticas</a>
        <a href="/admin/showGraphs?fecha=7" class="btn">Ver gráficos</a>
    </section>
    </main>
{{/admin}}
{{#editor}}
    <section class="actions">
        <a href="/editor/verPreguntasReportadas" class="btn">Ver preguntas reportadas</a>
        <a href="/editor/verPreguntasSugeridas" class="btn">Ver preguntas sugeridas</a>
        <a href="/editor/crearPreguntas" class="btn">Crear preguntas</a>
        <a href="/editor/verPreguntasActivas" class="btn">Editar preguntas</a>
    </section>
    </main>
{{/editor}}
{{#jugador}}
    <section class="actions">
        <a href="?page=juego&action=crear" class="btn">Nueva partida</a>
        <a href="/pregunta/sugerirPregunta" class="btn">Sugerir pregunta</a>
    </section>

    <section class="game-history">
        <h3>Últimas partidas</h3>

        <table>
            <thead>
            <tr>
                <th>Fecha</th>
                <th>Hora</th>
                <th>Puntaje</th>
            </tr>
            </thead>
            <tbody>
            {{#partidas}}
                <tr>
                    <td>{{fecha}}</td>
                    <td>{{hora}}</td>
                    <td>{{puntaje}}</td>
                </tr>
            {{/partidas}}
            </tbody>
        </table>

        {{^partidas}}
            <p>No tienes partidas registradas aún.</p>
        {{/partidas}}
    </section>
    </main>
{{/jugador}}
{{/user}}