{{#user}}
    <h1>Bienvenido <a href="/usuario/profile/username={{usuario}}">{{nombre}}</a></h1>
        <div class="card card-body mb-3">
            <div class="d-flex align-items-center">
                <div class="flex-grow-1 ms-3">
                    <p>Nombre: {{usuario}}</p>
                    <p>Mail: {{mail}}</p>
                    <p>Nivel de jugador: {{userSession.nivel}}</p>
                    <p>Puntaje: {{userSession.puntaje}}</p>
                </div>
                <div class="flex-grow-1  d-flex flex-column align-items-center justify-content-center mb-3">
                    <div class="mb-3">
                        {{#userSession.isAdmin}}
                            <a href="/admin" class="btn btn-dark">Panel Administrativo</a>
                        {{/userSession.isAdmin}}
                        <a href="?page=juego&action=crear" class="btn btn-success">Jugar partida</a>
                    </div>
                    <div>
                        <a href="/ranking" class="btn btn-secondary">Ranking</a>
                        <a href="/partida" class="btn btn-info">Partidas</a>
                        {{^userSession.isAdmin}}
                            <a href="/pregunta/sugerir" class="btn btn-warning">Sugerir una pregunta</a>
                        {{/userSession.isAdmin}}
                    </div>

                </div>
            </div>
        </div>
{{/user}}
